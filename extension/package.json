{
  "private": true,
  "scripts": {
    "premake": "rm -rf ./dist ./dist.zip ./src-root.zip",
    "make": "webpack --mode production",
    "postmake": "#npm run zip:dist && zip:src-root",
    "zip:dist": "cd dist && zip -r ../dist.zip ./*",
    "zip:src-root": "zip -r src-root.zip $(git ls-files ./)",
    "watch": "npm run make -- --watch",
    "lint": "npm run prettier -- --check",
    "lint:fix": "npm run prettier -- --write",
    "prettier": "prettier ./src/\\*\\*/\\*.{ts,css} --single-quote --trailing-comma=es5 --print-width=120"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,css}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "webextension-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.2",
    "copy-webpack-plugin": "^5.0.2",
    "css-loader": "^2.1.1",
    "file-loader": "^4.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.3",
    "image-webpack-loader": "^5.0.0",
    "lint-staged": "^9.2.1",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "sass-loader": "^7.2.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6"
  }
}
